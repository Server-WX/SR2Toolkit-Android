<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--下拉列表样式-->
    <style name="list_style" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/header_color</item>
        <item name="android:width">100dp</item>
        <item name="android:height">20dp</item>
    </style>
    <!--应用 按钮样式-->
    <style name="apply_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:width">120dp</item>
        <item name="android:height">65dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:text">@string/apply_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--说明 按钮样式-->
    <style name="explain_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:background">@color/header_color</item>
        <item name="android:text">@string/explain</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--开关按钮样式-->
    <style name="switch_style">
        <item name="android:layout_marginStart">30dp</item>
        <item name="switchMinWidth">67dp</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_background</item>
    </style>
    <!--文字样式-->
    <style name="text_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>