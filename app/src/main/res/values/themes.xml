<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SR2_Toolkit" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/header_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status_bar</item>
        <!-- Customize your theme here. -->

        <!--全局背景色-->
        <item name="android:windowBackground">@color/background_color</item>
        <!--全局按钮色-->
        <item name="colorButtonNormal">@color/button_color</item>
        <!--全局控件默认色-->
        <item name="android:colorControlNormal">@color/white</item>
        <!--全局控件选中色-->
        <item name="colorAccent">@color/button_color</item>
        <!--底部导航栏背景色-->
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

    <style name="Theme.SR2_Toolkit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SR2_Toolkit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SR2_Toolkit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>